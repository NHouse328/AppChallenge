<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConversorDeComprimentoActivity"
>

    <TextView
            android:text="@string/activity_name_conversor_de_comprimento"
            android:textSize="@dimen/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_back"
    >

        <LinearLayout
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

        >

            <TableLayout
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

            >

                <TableRow
                        android:gravity="center"
                >

                    <TextView
                            android:text="@string/de"
                            android:layout_weight="0.1"
                            android:textAlignment="viewEnd"
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                    <Spinner
                            android:id="@+id/spinner1"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                </TableRow>


                <EditText
                        android:id="@+id/edt_num_conv_comprimento"
                        android:hint="@string/comprimento"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned|number|numberDecimal"
                />


                <TableRow
                        android:gravity="center"
                >

                    <TextView
                            android:text="@string/para"
                            android:layout_weight="0.1"
                            android:textAlignment="viewEnd"
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    />

                    <Spinner
                            android:id="@+id/spinner2"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    />

                </TableRow>

                <TextView
                        android:id="@+id/txv_result_conv_comprimento"
                        android:text="@string/resultado"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:layout_height="match_parent"
                />

            </TableLayout>


            <Button
                    android:id="@+id/btn_calcular_conv_comprimento"
                    android:text="@string/converter"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

        </LinearLayout>

    </ScrollView>

    <Button
            android:id="@+id/btn_back"
            android:text="@string/voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>